{#
	{{site.anchor("Bar Graph")}}
	{% include full ~ "bar-graph.twig" with {
		heading: "Goal: $70 Million",
		title: "Endow",
		summary: "Sustain the spirit of discourse that is central to a Kenyon education.",
		description: "",
		link: {
			href: "#",
			label: "Button Label",
			large: false
		},
		theme: "dark",
		color: "orange",
		goal: "$150,000,000",
		progress: "$100,000,000"
	} %}
#}

<div class="js-bar-graph bar_graph{% if theme %} theme_{{theme}}{% endif %}{% if color %} color_{{color}}{% endif %}">
	<div class="fs-row">
		<div class="fs-cell fs-lg-10 fs-lg-push-1">
			<div class="bar_graph_container">
				<div class="bar_graph_info">
					{% if heading %}
						<p class="bar_graph_heading">{{heading}}</p>
					{% endif %}
					<h3 class="bar_graph_title">{{title}}</h3>
					<div class="bar_graph_inner{% if summary %} has_summary{% endif %}">
						{% if summary %}
						<div class="bar_graph_summary"><span class="bar_graph_summary_label">{{summary}}</span></div>
						{% endif %}
						<div class="bar_graph_button{% if link.large %} large{% endif %}">
							{{site.button("bar_graph_button", link.label, "#")}}
						</div>
					</div>
				</div>
				
				<div class="bar_graph_fullwidth js-bargraph-fullwidth">
					<div class="bar_graph_value">
						<span class="bar_graph_value_label">{{progress}}</span>
					</div>
				</div>
				<div class="bar_graph_labels">
					<span class="bar_graph_nominator">$0</span>
					<span class="bar_graph_denominator">{{goal}}</span>
				</div>
				{% if description %}
				<div class="bar_graph_description">
					<p class="bar_graph_description_text">{{description}}</p>
				</div>
				{% endif %}
			</div>
		</div>
	</div>
</div>