{#
	{{site.anchor("Alert")}}
	{% include feat ~ "alert.twig" with {
		theme: "",
		time: "12:30:45",
		date: "2016-10-27 1:21:4",
		href: "#",
		title: "Alert",
		description: "Lorem ipsum dolor sit amet, consectetuer adipiscing elit."
	} %}
#}

<section class="js-alert alert{% if theme %} theme_{{theme}}{% endif %}" role="alert" data-time="{{time}}">
	<button class="js-toggle_handle js-alert-close alert_close">
		<span class="alert_close_label">Close Alert</span>
		<span class="alert_close_icon">{{site.icon("close")}}</span>
	</button>
	<div class="fs-row">
		<div class="fs-cell fs-lg-10">
			<div class="alert_body">
				<div class="alert_content">
					<header class="alert_header">
						<h1 class="alert_title">
							{% if href %}
							<a class="alert_title_link" href="{{href}}">
							{% endif %}
							<span class="alert_title_icon">{{site.icon("bell")}}</span>
							<span class="alert_title_label">{{title}}</span>
							{% if href %}
							</a>
							{% endif %}
						</h1>
					</header>
					<div class="alert_description">
						<p>{{description}}</p>
					</div>
					<footer class="alert_footer">
						{{site.button("alert", "Learn More", "#", "arrow_right")}}
					</footer>
				</div>
			</div>
		</div>
	</div>
</section>
